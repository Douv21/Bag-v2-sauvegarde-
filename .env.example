# Configuration du Bot Discord
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Configuration MongoDB (optionnel)
MONGODB_URI=mongodb://localhost:27017
MONGODB_PASSWORD=your_mongodb_password

# Configuration YouTube (optionnel - pour éviter les limitations)
YT_COOKIES=your_youtube_cookies_here
# Ou en base64:
# YT_COOKIES_B64=base64_encoded_cookies
# Ou depuis un fichier:
# YT_COOKIES_FILE=path/to/cookies.txt

# Configuration yt-dlp (optionnel)
YTDLP_SOCKET_TIMEOUT=10
YTDLP_NO_CHECK_CERT=false
YTDLP_DISABLE_DOWNLOAD=false

# Configuration de sauvegarde (optionnel)
BACKUP_WEBHOOK_URL=your_discord_webhook_for_backups

# Variables d'environnement pour le déploiement
NODE_ENV=production
PORT=5000
